<div class="map-el">
  <div
    id="map"
    class='map pad2 mr-1'
    data-markers="<%= @markers.to_json %>"
    data-user="<%= @user.to_json %>"
    data-mapbox-api-key="<%= ENV['MAPBOX_API_KEY'] %>">
  </div>
  <div class='sidebar ml-2 mb-2 pr-1'>
    <div class='heading'>
      <div>
        <h1>Postos mais baratos</h1>
        <p>Os melhores preços de gasolina próximo a você</p>
      </div>
    </div>

    <div id='listings' class='listings mb-4 ml-2'>
      <div> 
        <div id="selected"></div>
        <% @gas_stations.each do |gas_station|%>
          <div class="item card" data-gas_station-id="<%= gas_station.id %>"><%= gas_station.name %> <p>a <%= gas_station.distance_to(@user_loc) %> KM de distância</p></div>
        <% end %>
      </div>
    </div>
  </div>
</div>